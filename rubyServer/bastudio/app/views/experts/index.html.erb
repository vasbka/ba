<h1>Список мастеров</h1>

<div class="new">
  <%= link_to 'Добавить мастера', new_expert_path %>
</div>


<table>
  <tr>
    <th>Фамилия</th>
    <th>Имя</th>
    <th>Отчетсво</th>
    <th>Описание</th>
    <th>Номер телефона</th>
    <th colspan="3"></th>
  </tr>
  <% @experts.each do |expert| %>
    <tr>
      <td class="info"><%= expert.lastName %></td>
      <td class="info"><%= expert.firstName %></td>
      <td class="info"><%= expert.secondName %></td>
      <td class="info"><%= expert.description %></td>
      <td class="info"><%= expert.phoneNumber %></td>
      <td class="info">
        <% expert.procedures.each do |procedure| %>
          <p>
            <strong>Название процедуры:</strong>
            <%= procedure.title %>
          </p>
          Цена <%= render plain: ExpProcedure.where(expert_id: expert.id, procedure_id: procedure.id)[0].price %>

        <% end %>
      </td>
      <td><%= link_to 'Показать детальнее', expert_path(expert) %></td>
      <td><%= link_to 'Изменить', edit_expert_path(expert) %></td>
      <td><%= button_to 'Удалить', expert_path(expert), method: :delete, :onclick => "return confirm('Точно нужно удалить?')" %></td>
    </tr>
  <% end %>

</table>
