<%= form_with model: @expert do |form| %>

<% if @expert.errors.any? %>
  <div id="error_explanation">
      <h2>
        <% pluralize(@expert.errors.count, "Ошибка") %> обнаружено
      </h2>
  </div>
  <ul>
    <% @expert.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<p>
  <%= form.label :firstName, 'Имя' %>
  <%= form.text_field :firstName %>
</p>

<p>
  <%= form.label :lastName, 'Фамилия' %>
  <%= form.text_field :lastName %>
</p>

<p>
  <%= form.label :secondName, 'Отчетсво' %>
  <%= form.text_field :secondName %>
</p>

<p>
  <%= form.label :description, 'Описание мастера' %>
  <%= form.text_field :description %>
</p>

<p>
  <%= form.label :phoneNumber, 'Номер телефона мастера' %>
  <%= form.text_field :phoneNumber %>
</p>

<h2>Добавить процедуры:</h2>
<% if @procedures %>
<%  @procedures.each do |procedure| %>
<div>
  <div class="">
    <%= form.label :isAvailableProcedure, "Учитывать процедуру " + procedure.title %>
    <%= form.check_box :procedures, name: "procedure[" + procedure.id.to_s + "][available]" %>
    <%= form.hidden_field :procedures, name: 'procedure[' + procedure.id.to_s + '][id]', :value => procedure.id %>
  </div>
  <div class="">
    <%= form.label :price, 'Цена:' %>
    <%= form.number_field  :procedures, name: 'procedure[' + procedure.id.to_s + '][price]' %>
  </div>
</div>
<% end %>
<% end %>

<p>
  <%= form.submit 'Обработать' %>
</p>



<% end %>
